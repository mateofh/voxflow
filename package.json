{
  "name": "voxflow",
  "version": "0.1.0",
  "description": "Open-source AI voice-to-text desktop app. BYOK alternative to Wispr Flow.",
  "main": "dist/main/index.js",
  "author": "VoxFlow Contributors",
  "license": "MIT",
  "homepage": "https://github.com/voxflow/voxflow",
  "repository": {
    "type": "git",
    "url": "https://github.com/voxflow/voxflow.git"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run build:main && concurrently \"npm run watch:main\" \"vite dev\" \"wait-on tcp:5173 && electron .\"",
    "build": "npm run build:main && vite build",
    "build:main": "tsc --project tsconfig.main.json",
    "watch:main": "tsc --project tsconfig.main.json --watch",
    "preview": "vite preview",
    "package": "npm run build && electron-builder --mac --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "node scripts/setup-dev.js"
  },
  "dependencies": {
    "@deepgram/sdk": "^3.9.0",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@ricky0123/vad-web": "^0.0.18",
    "better-sqlite3": "^11.7.0",
    "electron-updater": "^6.3.0",
    "keytar": "^7.9.0",
    "openai": "^4.77.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^25.2.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9.17.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vitest": "^2.1.0",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
